	.sbttl	Error Handling Macros

	.macro	deferr	code,desc
	.save
	.psect	errors,d,ro
hdr'code:
	.ascii	|HTTP/1.1 code desc|<15><12>
	.ascii	|Content-Length: |
hdl'code=	. - hdr'code
msg'code:
	.ascii	|code: desc|
msl'code=	. - msg'code

	.psect	errcod,i,ro
rsp'code::
	mov	r1,r4
	add	#c.iost,r4
	mov	r1,r5
	add	#c.tmp,r5
	qiow$s	#io.can,c.lun(r1),#conefn
	orclos
	qio$s	#io.wlb,c.lun(r1),#conefn,,r4,#rspast,<#hdr'code,#hdl'code>
	orclos
	mov	r1,r3
	mov	r5,r0
	mov	#msl'code,r1
	clr	r2
	call	$cbdmg
	sub	r5,r0
	mov	r3,r1
	qio$s	#io.wlb,c.lun(r1),#conefn,,r4,#rspast,<r5,r0>
	orclos
	qio$s	#io.wlb,c.lun(r1),#conefn,,r4,#rspast,<#hdrend,#hdlend>
	orclos
	qio$s	#io.wlb,c.lun(r1),#conefn,,r4,#rspdon,<#msg'code,#msl'code>
	orclos
	astx$s
	.restore

	.macro	or'code	cli,iosb,?ok,?bad
	.if nb iosb
	bcs	bad
	tstb	iosb
	bpl	ok
	.iff
	bcc	ok
	.endc
bad:
	.if nb cli
	mov	cli,r1
	.endc
	jmp	rsp'code
ok:
	.endm	or'code
	.endm	deferr	

	.macro	orjmp	label,iosb,?ok,?bad
	.if	nb	iosb
	bcs	bad
	tstb	iosb
	bpl	ok
	.iff
	bcc	ok
	.endc
bad:	jmp	label
ok:
	.endm

	.macro	orclos	cli,iosb,?ok,?bad
	.if nb iosb
	bcs	bad
	tstb	iosb
	bpl	ok
	.iff
	bcc	ok
	.endc
bad:
	.if nb cli
	mov	cli,r1
	.endc
	jmp	close
ok:
	.endm

